<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CV - {{full_name}}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Helvetica', 'Arial', sans-serif;
            font-size: 10pt;
            line-height: 1.5;
            color: #333;
            background: #fff;
        }

        .container {
            max-width: 100%;
            padding: 0;
        }

        /* Header Section - Alternative Style */
        .header {
            background: #f8f9fa;
            padding: 20px;
            margin-bottom: 20px;
            border-bottom: 3px solid #007bff;
        }

        .header h1 {
            font-size: 20pt;
            font-weight: bold;
            margin-bottom: 8px;
            color: #007bff;
            text-transform: uppercase;
        }

        .header .address {
            font-size: 9pt;
            margin-bottom: 4px;
            color: #555;
        }

        .header .contact {
            font-size: 9pt;
            margin-bottom: 0;
            color: #555;
        }

        .header .contact.centered {
            text-align: center;
        }

        /* Section Headings - Alternative Style */
        .section {
            margin-bottom: 18px;
        }

        .section-heading {
            font-size: 13pt;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 10px;
            color: #007bff;
            border-bottom: 2px solid #007bff;
            padding-bottom: 3px;
        }

        .section-content {
            margin-left: 10px;
            font-size: 10pt;
            color: #444;
        }

        /* Education Section */
        .education-entry {
            margin-bottom: 12px;
            padding-left: 5px;
        }

        .education-entry .school-name {
            font-weight: bold;
            color: #000;
        }

        /* Work Experience Section */
        .work-entry {
            margin-bottom: 18px;
            padding-left: 5px;
        }

        .work-entry .work-header {
            margin-bottom: 6px;
            background: #f1f3f5;
            padding: 5px;
        }

        .work-entry .work-title {
            font-weight: bold;
            display: inline;
            color: #000;
        }

        .work-entry .work-duration {
            display: inline;
            margin-left: 15px;
            font-style: italic;
            color: #666;
        }

        .work-entry .work-duties {
            margin-top: 6px;
            text-align: justify;
            padding-left: 5px;
        }

        /* Skills and Languages */
        .list-item {
            margin-left: 25px;
            margin-bottom: 4px;
        }

        /* References Section */
        .reference-entry {
            margin-bottom: 10px;
            padding-left: 5px;
            border-left: 3px solid #e9ecef;
            padding-left: 10px;
        }

        /* Additional Experience */
        .additional-exp {
            text-align: justify;
            padding: 10px;
            background: #f8f9fa;
            border-radius: 3px;
        }

        /* Bullet points */
        ul {
            list-style-type: disc;
            margin-left: 25px;
        }

        li {
            margin-bottom: 4px;
        }

        /* Prevent page breaks inside elements */
        .work-entry,
        .education-entry,
        .reference-entry {
            page-break-inside: avoid;
        }

        /* Text overflow handling */
        .text-wrap {
            word-wrap: break-word;
            overflow-wrap: break-word;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        {{#if full_name}}
        <div class="header">
            <h1>{{full_name}}</h1>
            
            {{#if physical_address}}
            <div class="address">üìç {{physical_address}}</div>
            {{/if}}
            
            {{#if phone_centered}}
                <div class="contact centered">üìû {{phone}}</div>
            {{else}}
                {{#if phone}}
                    {{#if email}}
                    <div class="contact">üìû {{phone}} &nbsp;&nbsp;|&nbsp;&nbsp; ‚úâÔ∏è {{email}}</div>
                    {{else}}
                    <div class="contact">üìû {{phone}}</div>
                    {{/if}}
                {{else}}
                    {{#if email}}
                    <div class="contact">‚úâÔ∏è {{email}}</div>
                    {{/if}}
                {{/if}}
            {{/if}}
        </div>
        {{/if}}

        <!-- Career Objective -->
        {{#if career_goal}}
        <div class="section">
            <div class="section-heading">Career Objective</div>
            <div class="section-content text-wrap">
                {{{nl2br career_goal}}}
            </div>
        </div>
        {{/if}}

        <!-- Education -->
        {{#if tertiary_education}}
        <div class="section">
            <div class="section-heading">Education</div>
            <div class="section-content">
                {{#if tertiary_education}}
                <div class="education-entry text-wrap">
                    {{{boldFirstLine tertiary_education}}}
                </div>
                {{/if}}

                {{#if education_matric}}
                <div class="education-entry text-wrap">
                    {{{boldFirstLine education_matric}}}
                </div>
                {{/if}}
            </div>
        </div>
        {{else}}
            {{#if education_matric}}
            <div class="section">
                <div class="section-heading">Education</div>
                <div class="section-content">
                    <div class="education-entry text-wrap">
                        {{{boldFirstLine education_matric}}}
                    </div>
                </div>
            </div>
            {{/if}}
        {{/if}}

        <!-- Training Certificates & Other Qualifications -->
        {{#if training_certificates_heading}}
        <div class="section">
            <div class="section-heading">Certifications & Qualifications</div>
            <div class="section-content">
                {{#if training_cert_bullet}}
                <div class="list-item text-wrap">‚úì {{{nl2br training_cert_bullet}}}</div>
                {{/if}}
                {{#if other_qualifications_bullet}}
                <div class="list-item text-wrap">‚úì {{{nl2br other_qualifications_bullet}}}</div>
                {{/if}}
            </div>
        </div>
        {{/if}}

        <!-- Work Experience -->
        {{#if work_experience_1}}
        <div class="section">
            <div class="section-heading">Professional Experience</div>
            <div class="section-content">
                {{#if work_experience_1}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_1.title}}}</span>
                        {{#if work_experience_1.duration}}
                        <span class="work-duration">{{work_experience_1.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_1.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_1.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}

                {{#if work_experience_2}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_2.title}}}</span>
                        {{#if work_experience_2.duration}}
                        <span class="work-duration">{{work_experience_2.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_2.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_2.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}

                {{#if work_experience_3}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_3.title}}}</span>
                        {{#if work_experience_3.duration}}
                        <span class="work-duration">{{work_experience_3.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_3.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_3.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}

                {{#if work_experience_4}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_4.title}}}</span>
                        {{#if work_experience_4.duration}}
                        <span class="work-duration">{{work_experience_4.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_4.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_4.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}

                {{#if work_experience_5}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_5.title}}}</span>
                        {{#if work_experience_5.duration}}
                        <span class="work-duration">{{work_experience_5.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_5.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_5.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
        {{/if}}

        <!-- Additional Experience -->
        {{#if Additional_Experience_heading}}
        <div class="section">
            <div class="section-heading">{{Additional_Experience_heading}}</div>
            <div class="section-content additional-exp text-wrap">
                {{{nl2br additional_experience}}}
            </div>
        </div>
        {{/if}}

        <!-- Skills -->
        {{#if skills}}
        <div class="section">
            <div class="section-heading">Skills</div>
            <div class="section-content">
                <div class="list-item text-wrap">‚ö° {{{nl2br skills}}}</div>
            </div>
        </div>
        {{/if}}

        <!-- Languages -->
        {{#if languages}}
        <div class="section">
            <div class="section-heading">Languages</div>
            <div class="section-content">
                <div class="list-item text-wrap">üåê {{{nl2br languages}}}</div>
            </div>
        </div>
        {{/if}}

        <!-- References -->
        {{#if reference_1}}
        <div class="section">
            <div class="section-heading">References</div>
            <div class="section-content">
                {{#if reference_1}}
                <div class="reference-entry text-wrap">{{{nl2br reference_1}}}</div>
                {{/if}}
                {{#if reference_2}}
                <div class="reference-entry text-wrap">{{{nl2br reference_2}}}</div>
                {{/if}}
                {{#if reference_3}}
                <div class="reference-entry text-wrap">{{{nl2br reference_3}}}</div>
                {{/if}}
                {{#if reference_4}}
                <div class="reference-entry text-wrap">{{{nl2br reference_4}}}</div>
                {{/if}}
                {{#if reference_5}}
                <div class="reference-entry text-wrap">{{{nl2br reference_5}}}</div>
                {{/if}}
            </div>
        </div>
        {{/if}}
    </div>
</body>
</html>

