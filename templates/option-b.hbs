<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CV - {{full_name}}</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            font-size: 11pt;
            line-height: 1.4;
            color: #000;
            background: #fff;
        }

        .container {
            max-width: 100%;
            padding: 0;
        }

        /* Header Section */
        .header {
            text-align: center;
            margin-bottom: 15px;
        }

        .header h1 {
            font-size: 18pt;
            font-weight: bold;
            margin-bottom: 5px;
            text-transform: uppercase;
        }

        .header .address {
            font-size: 10pt;
            margin-bottom: 3px;
        }

        .header .contact {
            font-size: 10pt;
            margin-bottom: 10px;
        }

        .header .contact.centered {
            text-align: center;
        }

        /* Section Headings */
        .section {
            margin-bottom: 15px;
        }

        .section-heading {
            font-size: 12pt;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 8px;
            border-bottom: 1px solid #000;
            padding-bottom: 2px;
        }

        .section-content {
            margin-left: 0;
            font-size: 11pt;
        }

        /* References section specific styling */
        .references {
            margin-bottom: 10px;
        }
        
        .references .section-content {
            margin-top: 0px;
            padding-top: 0;
            margin-bottom: 0;
        }

        /* Education Section */
        .education-entry {
            margin-bottom: 10px;
        }

        .education-entry .school-name {
            font-weight: bold;
        }

        /* Work Experience Section */
        .work-entry {
            margin-bottom: 15px;
        }

        .work-entry .work-header {
            margin-bottom: 5px;
        }

        .work-entry .work-title {
            font-weight: bold;
            display: inline;
        }

        .work-entry .work-duration {
            display: inline;
            margin-left: 10px;
        }

        .work-entry .work-duties {
            margin-top: 5px;
            text-align: justify;
        }

        /* Skills and Languages */
        .list-item {
            margin-left: 20px;
        }

        /* References Section */
        .reference-entry {
            margin-bottom: 6px;
            margin-top: 0;
            padding-left: 5px;
        }

        /* Additional Experience */
        .additional-exp {
            text-align: justify;
        }

        /* Bullet points */
        ul {
            list-style-type: disc;
            margin-left: 20px;
        }

        li {
            margin-bottom: 3px;
        }

        /* Prevent page breaks inside elements */
        .work-entry,
        .education-entry,
        .reference-entry {
            page-break-inside: avoid;
        }

        /* Text overflow handling */
        .text-wrap {
            word-wrap: break-word;
            overflow-wrap: break-word;
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        {{#if full_name}}
        <div class="header">
            <h1>{{full_name}}</h1>
            
            {{#if physical_address}}
            <div class="address">{{physical_address}}</div>
            {{/if}}
            
            {{#if phone_centered}}
                <div class="contact centered">{{phone}}</div>
            {{else}}
                {{#if phone}}
                    {{#if email}}
                    <div class="contact">{{phone}} &nbsp;&nbsp;&nbsp; {{email}}</div>
                    {{else}}
                    <div class="contact">{{phone}}</div>
                    {{/if}}
                {{else}}
                    {{#if email}}
                    <div class="contact">{{email}}</div>
                    {{/if}}
                {{/if}}
            {{/if}}
        </div>
        {{/if}}

        <!-- Career Objective -->
        {{#if career_goal}}
        <div class="section">
            <div class="section-heading">CAREER OBJECTIVE</div>
            <div class="section-content text-wrap">
                {{{nl2br career_goal}}}
            </div>
        </div>
        {{/if}}

        <!-- Education -->
        {{#if tertiary_education}}
        <div class="section">
            <div class="section-heading">EDUCATION</div>
            <div class="section-content">
                {{#if tertiary_education}}
                <div class="education-entry text-wrap">
                    {{{boldFirstLine tertiary_education}}}
                </div>
                {{/if}}

                {{#if education_matric}}
                <div class="education-entry text-wrap">
                    {{{boldFirstLine education_matric}}}
                </div>
                {{/if}}
            </div>
        </div>
        {{else}}
            {{#if education_matric}}
            <div class="section">
                <div class="section-heading">EDUCATION</div>
                <div class="section-content">
                    <div class="education-entry text-wrap">
                        {{{boldFirstLine education_matric}}}
                    </div>
                </div>
            </div>
            {{/if}}
        {{/if}}

        <!-- Training Certificates & Other Qualifications -->
        {{#if training_certificates_heading}}
        <div class="section">
            <div class="section-heading">{{training_certificates_heading}}</div>
            <div class="section-content">
                {{#if training_cert_bullet}}
                <div class="list-item text-wrap">• {{{nl2br training_cert_bullet}}}</div>
                {{/if}}
                {{#if other_qualifications_bullet}}
                <div class="list-item text-wrap">• {{{nl2br other_qualifications_bullet}}}</div>
                {{/if}}
            </div>
        </div>
        {{/if}}

        <!-- Work Experience -->
        {{#if work_experience_1}}
        <div class="section">
            <div class="section-heading">WORK EXPERIENCE</div>
            <div class="section-content">
                {{#if work_experience_1}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_1.title}}}</span>
                        {{#if work_experience_1.duration}}
                        <span class="work-duration">{{work_experience_1.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_1.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_1.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}

                {{#if work_experience_2}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_2.title}}}</span>
                        {{#if work_experience_2.duration}}
                        <span class="work-duration">{{work_experience_2.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_2.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_2.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}

                {{#if work_experience_3}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_3.title}}}</span>
                        {{#if work_experience_3.duration}}
                        <span class="work-duration">{{work_experience_3.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_3.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_3.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}

                {{#if work_experience_4}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_4.title}}}</span>
                        {{#if work_experience_4.duration}}
                        <span class="work-duration">{{work_experience_4.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_4.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_4.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}

                {{#if work_experience_5}}
                <div class="work-entry">
                    <div class="work-header">
                        <span class="work-title">{{{nl2br work_experience_5.title}}}</span>
                        {{#if work_experience_5.duration}}
                        <span class="work-duration">{{work_experience_5.duration}}</span>
                        {{/if}}
                    </div>
                    {{#if work_experience_5.duties}}
                    <div class="work-duties text-wrap">{{{nl2br work_experience_5.duties}}}</div>
                    {{/if}}
                </div>
                {{/if}}
            </div>
        </div>
        {{/if}}

        <!-- Additional Experience -->
        {{#if Additional_Experience_heading}}
        <div class="section">
            <div class="section-heading">{{Additional_Experience_heading}}</div>
            <div class="section-content additional-exp text-wrap">
                {{{nl2br additional_experience}}}
            </div>
        </div>
        {{/if}}

        <!-- Skills -->
        {{#if skills}}
        <div class="section">
            <div class="section-heading">SKILLS</div>
            <div class="section-content">
                <div class="list-item text-wrap">* {{{nl2br skills}}}</div>
            </div>
        </div>
        {{/if}}

        <!-- Languages -->
        {{#if languages}}
        <div class="section">
            <div class="section-heading">LANGUAGES</div>
            <div class="section-content">
                <div class="list-item text-wrap">* {{{nl2br languages}}}</div>
            </div>
        </div>
        {{/if}}

        <!-- References -->
        {{#if reference_1}}
        <div class="section references">
            <div class="section-heading">REFERENCES</div>
            <div class="section-content">
                {{#if reference_1}}
                <div class="reference-entry text-wrap">{{{nl2br reference_1}}}</div>
                {{/if}}
                {{#if reference_2}}
                <div class="reference-entry text-wrap">{{{nl2br reference_2}}}</div>
                {{/if}}
                {{#if reference_3}}
                <div class="reference-entry text-wrap">{{{nl2br reference_3}}}</div>
                {{/if}}
                {{#if reference_4}}
                <div class="reference-entry text-wrap">{{{nl2br reference_4}}}</div>
                {{/if}}
                {{#if reference_5}}
                <div class="reference-entry text-wrap">{{{nl2br reference_5}}}</div>
                {{/if}}
            </div>
        </div>
        {{/if}}
    </div>
</body>
</html>

